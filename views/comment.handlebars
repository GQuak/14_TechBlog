<div class="col-md-12 blog-item">
    <h2>
        {{title}}
    </h2>
    <p style="font-weight: 500;">Created by {{ user.user_name }} on {{ format_date date_created }}</p>
    <p>{{ body }}</p>
    <form class="form new-comment">
        <input placeholder="name" class="comment" type="text" name="name" id="comment-name"><br>
        <input placeholder="comment" class="comment submission-field" type="text" name="comment" id="comment-text"><br>
        <input type="hidden" id="blog-id" value="{{ id }}">
        <button class="small green button" type="submit">Add Comment</button>
    </form>

</div>

<script src="/js/comment.js"></script>