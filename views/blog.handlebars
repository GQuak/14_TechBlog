<div class="col-md-12 blog-item">
    <h2>
        {{title}}
    </h2>
    <p style="font-weight: 500;">Created by {{ user.user_name }} on {{ format_date date_created }}</p>
    <p>{{ body }}</p>
    <form class="form new-comment">
        <input type="hidden" id="data-id" value="{{ id }}">
        <button class="small green button delete" data-id="{{ id }}">Delete Blog Post</button>
        <a class="small green button update" href="/edit/{{ id }}">Update Blog Post</a>
    </form>
</div>

<script src="/js/blog.js"></script>